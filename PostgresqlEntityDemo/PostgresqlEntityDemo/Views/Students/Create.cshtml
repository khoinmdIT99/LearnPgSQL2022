@model Students




<form method="post">
    <div class=" border p-3 mt-4">
        <div class="row pb-3 mt-4">
            <h2 class="text-primary">Add Student</h2>
            <hr />
        
    </div>
    <div class="mb-3">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label >Roll Number</label>
        <input asp-for="RollNumber" class="form-control" />
        <span asp-validation-for="RollNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Add Student</button>
    <a asp-controller="Students" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>